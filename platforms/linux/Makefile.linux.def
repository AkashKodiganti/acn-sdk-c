GCC_BIN = 

AS      = $(GCC_BIN)as
CC      = $(GCC_BIN)gcc
CPP     = $(GCC_BIN)g++
LD      = $(GCC_BIN)gcc
OBJCOPY = $(GCC_BIN)objcopy
OBJDUMP = $(GCC_BIN)objdump
SIZE    = $(GCC_BIN)size 
RM 	= rm -f

CPU = 
COMMON_FLAGS = -c -Wall -Wextra -Wno-unused-parameter -Wno-missing-field-initializers -fmessage-length=0 -fno-exceptions -fno-builtin -ffunction-sections -fdata-sections -funsigned-char -MMD -fno-delete-null-pointer-checks -fomit-frame-pointer
CC_FLAGS = $(COMMON_FLAGS) -Os -std=gnu99 -MP
CPPC_FLAGS = $(COMMON_FLAGS) -Os -std=gnu++98 -fno-rtti -MP
ASM_FLAGS = -x assembler-with-cpp $(COMMON_FLAGS) -Os
CC_SYMBOLS = -DTOOLCHAIN_GCC \
       -DDEBUG -Wextra -Werror

ifdef PROBOOK
CC_SYMBOLS += -D__probook_4540s__
endif

ifdef DEV_ENV
CC_SYMBOLS += -DDEV_ENV
endif

ifdef API_KEY
CC_SYMBOLS += -DDEFAULT_API_KEY=\"$(API_KEY)\"
endif

ifdef SEC_KEY
CC_SYMBOLS += -DDEFAULT_SECRET_KEY=\"$(SEC_KEY)\"
endif

mkfile_path := $(dir $(abspath $(lastword $(MAKEFILE_LIST))))
# $(info $(mkfile_path))
sdk_path := $(abspath $(mkfile_path)/../../)
# $(info $(sdk_path))

INCLUDES += -I$(sdk_path) \
	    -I$(sdk_path)/include \
	    -I$(mkfile_path)

