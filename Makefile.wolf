WOLFSSL_PATH := $(dir $(abspath $(lastword $(MAKEFILE_LIST))))/src/wolfSSL

WOLF_SRC += $(wildcard $(SDK_PATH)/platforms/default/wolf/crypt/*.c)
WOLF_SRC += $(shell find $(WOLFSSL_PATH) -name "*.c")
WOLF_SRC += $(wildcard $(SDK_PATH)/src/ssl/*.c)

WOLF_INCLUDES += \
    -I$(WOLFSSL_PATH) \
    -I$(WOLFSSL_PATH)/wolfssl
