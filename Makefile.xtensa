-include Makefile.static

LIBDIR ?= .
C_SDK_LIB = $(LIBDIR)/libkronoscsdk.a

-include Makefile.def

INCLUDES += \
    -I. \
    -I./include \
    -I./src/wolfSSL

CFLAGS = $(COPTS) $(DEFINES) $(INCLUDES)

CC = xt-xcc
AR = xt-ar
RM = rm -f

INCLUDES += -I$(PWD)/platforms/xtensa/time/

SRC += $(wildcard $(PWD)/platforms/xtensa/arrow/*.c)
SRC += $(wildcard $(PWD)/platforms/xtensa/bsd/*.c)
SRC += $(wildcard $(PWD)/platforms/xtensa/time/*.c)
SRC += $(wildcard $(PWD)/platforms/xtensa/crypt/*.c)
SRC += $(wildcard $(PWD)/platforms/xtensa/json/*.c)
SRC += ./src/wolfSSL/wolfcrypt/src/coding.c
SRC := $(filter-out ./src/json/json.c, $(SRC))
 
OBJ = $(SRC:.c=.o)

# AR_PRM = rcs
AR_PRM = ru
 
.SUFFIXES: .c
 
default: $(C_SDK_LIB)
 
.c.o:
	$(CC) $(CFLAGS) -c $< -o $@
 
$(C_SDK_LIB): $(OBJ)
	$(AR) $(AR_PRM) $(C_SDK_LIB) $(OBJ)
 
depend: dep
 
dep:
	makedepend -- $(CFLAGS) -- $(INCLUDES) $(SRC)
 
clean:
	$(RM) $(OBJ) $(C_SDK_LIB)
